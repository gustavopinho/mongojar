<arquillian xmlns="http://jboss.org/schema/arquillian"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <container qualifier="wildfly18" default="true">
        <configuration>
            <property name="jbossHome">target/wildfly-18.0.1.Final/</property>
            <property name="modulePath">target/wildfly-18.0.1.Final/modules</property>
            <property name="outputToConsole">true</property>
            <property name="allowConnectingToRunningServer">true</property>
            <property name="serverConfig">test-standalone.xml</property>
        </configuration>
    </container>

</arquillian>